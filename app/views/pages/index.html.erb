<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h2 class="font-bold text-2xl">Pages</h2>
  <% @pages.each do |page| %>
    <h3 class="font-bold text-lg"><%= link_to page.title, page %></h3>
  <% end %>

  <% unless (static rescue false) %>
    <%= link_to 'New page', new_page_path, class: "w-fit rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  <% end %>
</div>
